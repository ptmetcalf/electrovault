# Database (default uses SQLite file in repo root)
# DATABASE_URL=sqlite+pysqlite:///./photo_brain.db
# DATABASE_URL=postgresql+psycopg://photobrain:photobrain@localhost:5432/photo_brain

# Local model endpoints (Ollama/LM Studio style)
# OLLAMA_BASE_URL=http://localhost:11434
# Vision model for captions/tags (e.g., llava:latest)
# OLLAMA_VISION_MODEL=llava:latest
# Embedding model for text vectors (e.g., nomic-embed-text)
# OLLAMA_EMBED_MODEL=nomic-embed-text
# Max tokens to generate for vision calls (default 400)
# OLLAMA_VISION_NUM_PREDICT=400
# Vision call timeout in seconds (default 120)
# OLLAMA_HTTP_TIMEOUT=120
# Sampling temperature (0.0 deterministic, 1.0 creative; default 0.0)
# OLLAMA_TEMPERATURE=0.0
# Root log level (DEBUG, INFO, WARNING, ERROR)
# LOG_LEVEL=INFO

# Thumbnails
# THUMB_MAX_SIZE=320
# THUMB_CACHE_DIR=./thumbnails

# Location resolution (LocationIQ reverse geocoding; disabled by default)
# LOCATION_RESOLUTION_ENABLED=0
# LOCATIONIQ_API_KEY=your_api_key
# LOCATION_USER_RADIUS_METERS=150
# LOCATION_CACHE_RADIUS_METERS=300
# LOCATIONIQ_BASE_URL=https://us1.locationiq.com/v1
# LOCATIONIQ_HTTP_TIMEOUT=5.0

# Auto-ingest on API startup (optional)
# AUTO_INGEST_DIR=/abs/path/to/photos
# AUTO_INGEST_FORCE=0  # set to 1 to force reindex even if unchanged
# AUTO_INGEST_CONTEXT=family beach trip 2024
